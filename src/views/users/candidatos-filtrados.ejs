<%- include ('../partials/header'); %>
  <div class="container-margin">
    <section class="section breadcrumbs-custom">
      <div class="breadcrumbs-custom-main bg-image bg-primary">
        <div class="container">
          <h3 class="breadcrumbs-custom-title">Buscador de Candidatos</h3>
        </div>
      </div>
      <div class="breadcrumbs-custom-aside">
        <div class="container">
          <ul class="breadcrumbs-custom-path">
            <li><a href="/">Inicio</a></li>
            <li class="active">(<%= amount%>) Cantidatos registrados  </li>
          </ul>
        </div>
      </div>
    </section>
    <section class="section section-md">
      <div class="container">
        <form class="form-layout-search form-lg" method="GET" action="/candidatos/1">
          <div class="form-wrap form-wrap-icon">
          
            <input class="form-input" id="form-name" type="text" name="buscar_free" data-constraints="@Required">
            <label class="form-label" for="form-name"></label><span class="icon fl-bigmug-line-search74"></span>
          </div>
  
          <div class="form-wrap form-wrap-button">
            <button class="button button-lg button-primary" type="submit">Buscar</button>
          </div>
        </form>
        <div class="row row-50 flex-lg-row-reverse">
          <div class="col-md-8">
            <!-- Profile Minimal-->
            <% applicant.forEach(function(applicant){ %>
              <article class="profile-minimal">
                <div class="profile-minimal-inner">
                  <div class="profile-minimal-main-outer">
                    <div class="profile-minimal-main"><img class="profile-minimal-image"
                        src="<%= applicant.filename %>" alt="../images/android-chrome-512x512.png" width="101" height="96" />
                      <div class="profile-minimal-main-info">
                        <h5 class="profile-minimal-name"><a href="/perfil-user/<%= applicant.id%>">
                            <%= applicant.username%>
                            
                          </a></h5>
                        <p><%= applicant.salario%> $</p>
                        <p class="profile-minimal-position"><%= applicant.cargo%></p>
                      </div>
                    </div>
                  </div>
                  <div class="profile-minimal-meta" style="display: grid;">
                    <a class="button button-primary" href="/perfil-user/<%= applicant.id%>" style="
                            border-radius: 10px 10px 10px 10px;
                            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);">Ver Perfil</a>

                  <%if (userlog) { %>
                    <a class="button button-primary btn-candidatos" href="/user/chat/<%= applicant.id%>&<%=userlog.id%>" style="
                      border-radius: 10px 10px 10px 10px;
                      box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);">Chat</a>
                  <% } %>
                    
                  </div>
                </div>
              </article>
              <% }) %>
                <!-- Paginacion -->
       
          </div>
          <div class="col-md-4">
            <!-- <div class="row row-30"> -->
              <form action="/lista-candidatos/1" method="POST">
        
                <div class="row row-50 ">
                  <div class="col-lg-12">
                    <div class="row row-30">
                      <div class="col-sm-6 col-lg-12">
                        <p class="heading-8">Categorías</p>
                        <hr>
                          <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Traducciones" type="checkbox">Traducciones (<%= resultCat[0].length %>)
                              </label>
                          </li>
                        </ul>
                          <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Diseño Gráfico" type="checkbox">Diseño Gráfico (<%= resultCat[1].length %>)
                              </label>
                          </li>
                        </ul>
                          <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Edición de Imágenes" type="checkbox">Edición de Imágenes (<%= resultCat[2].length %>)
                              </label>
                          </li>
                        </ul>
                          <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Desarrollador web, móvil y software" type="checkbox">Desarrollador web, móvil y software (<%= resultCat[3].length %>)
                              </label>
                          </li>
                        </ul>
                          <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Soporte Administrativo" type="checkbox">Soporte Administrativo (<%= resultCat[4].length %>)
                              </label>
                          </li>
                        </ul>
                          <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Consultoría y Contabilidad" type="checkbox">Consultoría y Contabilidad (<%= resultCat[5].length %>)
                              </label>
                          </li>
                        </ul>
                          <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Marketing Online" type="checkbox">Marketing Online (<%= resultCat[6].length %>)
                              </label>
                          </li>
                        </ul>

                          <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Cursos" type="checkbox">Cursos (<%= resultCat[8].length %>)
                              </label>
                          </li>
                        </ul>
                        <ul class="list list-xs">                      
                          <li>
                            <label class="checkbox checkbox_info">
                                <input name="categoria" value="Otros" type="checkbox">Otros (<%= resultCat[7].length %>)
                              </label>
                          </li>
                        </ul>
                        <!-- <% categorias.forEach(function(categorias){ %>
                        <% }) %> -->
                      </div>
                    </div>
                  </div>
                </div>
                      <button class="btn btn-primary btn-sm btn-block" style="margin-top: 50px;" type="submit">Filtrar</button>
              </form>
  
            </div>
          </div>


        </div>
    </section>
  </div>
  <%- include('../partials/footer') %>
